<%- include("../../partials/header.ejs")%>
<%- include("../../partials/navbar.ejs")%>



<div class="container">
    <hr />
    <h2>Categorias</h2>
    <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <%users.forEach((user=>{%>
                <tr>
                    <th><%= user.id %> </th>
                    <th><%= user.email %> </th>
                  
                    <th>
                      
                            <a href="/admin/categories/edit/ " class="btn btn-warning ">Editar</a>
                    


                       
                        <form action="/admin/categories/delete" method="POST" onsubmit="confirma(event,this)" style="display: inline;">
                            <input type="hidden" name="id" value="<%= users.id%> ">
                            <button class="btn btn-danger ">Deletar</button>
                        </form>
                        
                    </th>
                </tr>    
           <% }))%>
                               
        </tbody>
    </table>
</div>



<%- include("../../partials/scripts.ejs")%>