<%- include("../../partials/header.ejs")%>

    <body>
        <%- include("../../partials/navbar.ejs")%>
            <div class="container">
                <hr />
                <h2>Artigos</h2>
                <a href="/admin/articles/new" class="btn btn-success">Criar novo artigo</a>
                <hr />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titulo</th>
                            <th>Slug</th>
                      
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%articles.forEach((article=>{%>
                            <tr>
                                <td>
                                    <%= article.id %>
                                </td>
                                <td>
                                    <%= article.title %>
                                </td>
                                <td>
                                    <%= article.slug %>
                                </td>
                            
                                <td >

                                    <a   href="/admin/article/edit/<%= article.id %> "
                                        class="btn btn-warning " >Editar</a>

                                    <form action="/admin/article/delete" method="POST"
                                        onsubmit="confirma(event,this)" style="display: inline;">
                                        <input type="hidden" name="id" value="<%= article.id%> ">
                                        <button style="display: inline" class="btn btn-danger ">Deletar</button>
                                    </form>

                                </td>
                            </tr>
                            <% }))%>

                    </tbody>
                </table>
            </div>
    </body>

    <%- include("../../partials/scripts.ejs")%>

        <script>
            function confirma(event, form) {
                event.preventDefault();
                var teste = confirm("Você quer deletar?")
                if (teste) {
                    form.submit();
                }
            }
        </script>