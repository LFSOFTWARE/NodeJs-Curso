<%- include("../../partials/header.ejs")%>

    <body>
        <%- include("../../partials/navbar.ejs")%>
            <div class="container">
                <hr />
                <h2>Categorias</h2>
                <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
                <hr />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titulo</th>
                            <th>Slug</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%categories.forEach((categorie=>{%>
                            <tr>
                                <th><%= categorie.id %> </th>
                                <th><%= categorie.title %> </th>
                                <th><%= categorie.slug %> </th>
                                <th>
                                  
                                        <a href="/admin/categories/edit/<%= categorie.id %> " class="btn btn-warning ">Editar</a>
                                


                                   
                                    <form action="/admin/categories/delete" method="POST" onsubmit="confirma(event,this)" style="display: inline;">
                                        <input type="hidden" name="id" value="<%= categorie.id%> ">
                                        <button class="btn btn-danger ">Deletar</button>
                                    </form>
                                    
                                </th>
                            </tr>    
                       <% }))%>
                                           
                    </tbody>
                </table>
            </div>
    </body>
    
    <%- include("../../partials/scripts.ejs")%>

    <script>
        function confirma(event,form){
            event.preventDefault();
            var teste =  confirm("Você quer deletar?")
            if(teste){
                form.submit();
            }
        }
    </script>